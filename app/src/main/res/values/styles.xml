<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.
 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/movies_pur</item>
        <item name="colorPrimaryDark">@color/movies_darkpur</item>
    </style>

    <style name="AppThemecust">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:targetApi="honeycomb">true</item>
    </style>
    <!--  Settings activity theme.
 -->
    <style name="MoviesTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Movies.NoTitle</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme" />
    <!--  main activity action bar styles
  -->
    <style name="ActionBar.Solid.Movies.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/logo</item>
    </style>
</resources>